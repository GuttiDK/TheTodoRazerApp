@page
@using TheTodoService.DataTransferObjects;
@model TheTodoWeb.Pages.ToDoList.CompletedToDoListModel
@{
    ViewData["Title"] = "CompletedToDoList";
}

<h3>ToDoList</h3>
                            <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">Create</a>
<hr />

<table class="table table-hover">
    <thead>
     <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Created</th>
            <th>Completed</th>
            <th>Priory</th>
            <th>Actions</th>
        </tr>
    </thead>
<tbody>
        @foreach (ToDoItemDto item in Model.ToDoItems)
        {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.TaskDescription</td>
                                            <td>@item.CreatedTime</td>
                                            <td>@item.IsCompleted</td>
                                            <td>@item.Priority</td>
            <td>
        <a class="btn btn-primary" href="/ToDoList/EditToDoList/@item.Id">Edit</a>
            </td>
                                        </tr>
        }
</tbody>
</table>