@page
@model TheTodoWeb.Pages.ToDoListModel
@{
    ViewData["Title"] = "ToDoList";
}

<h3>ToDoList</h3>

<hr />

<table class="table">
    <thread>
     <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Created Time</th>
            <th>IsCompleted</th>
            <th>Priory</th>
        </tr>
    </thread>
<tbody>
        @foreach (var item in Model.ToDoItems)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TaskDescription</td>
                    <td>@item.CreatedTime</td>
                    <td>@item.IsCompleted</td>
                    <td>@item.Priority</td>
                </tr>
        }
</table>
